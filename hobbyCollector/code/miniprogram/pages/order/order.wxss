.main {
    padding: 40px;
}
.h1 {
    position: relative;
    font-size: 20px;
    height: 44px;
    line-height: 44px;
    margin: 0em;
}
.teacher {
    text-align: center;
    padding: 20px 0;
    border: 1px solid #dbdbdb;
    border-radius: 6px;
    background-color: #fff;
    color: #abaaaa;
}
.teacher image {
    width: 60px;
    height: 60px;
    display: block;
    margin: auto;
    margin-bottom: 10px;
    border-radius: 50%;
}
.fa {
    display: inline-block;
    font: normal normal normal 14px/1 FontAwesome;
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    transform: translate(0, 0);
}

.loc {
    display: table;
    margin-top: 40px;
    width: 100%;
    border: 1px solid #dbdbdb;
    border-radius: 6px;
    background-color: #fff;
}

.btns {
    margin-top: 40px;
    text-align: center;
}

.city {
    display: table-cell;
    width: 20%;
    color: #ff8b01;
    vertical-align: middle;
    border-right: 1px solid #d9d9d9;
    text-align: center;
}

.loc-box {
    display: table-cell;
}

.loc-box view {
    padding: 20px;
}

.where {
    border-bottom: 1px solid #d9d9d9;
    line-height: 1.3;
}

.comment {
    display: inline-block;
    width: 80px;
    height: 80px;
    border-radius: 80px;
    border: 1px solid #dbdbdb;
    background-color: #fff;
    text-align: center;
    color: #6e6e6e;
    font-size: 14px;
}

.comment i {
    color: #ff8903;
    font-size: 18px;
    display: block;
    margin-top: 20px;
    margin-bottom: 4px;
}

.comment image{
    width: 40px;
    height: 40px;
    display: block;
    margin: auto;
    margin-top:8px;
    margin-bottom: 8px;
}

.ok {
    display: block;
    width: 100%;
    background-color: #ff8c03;
    border-radius: 6px;
    color: #fff;
    margin-top: 20px;
    padding: 2px 0;
    outline: none;
}

.where image{
    width: 21px;
    height: 21px;
    margin-right: 5px;
    vertical-align: top;
    line-height: 21px;
}

.when image{
    width: 18px;
    height: 18px;
    margin-right: 5px;
    vertical-align: top;
    line-height: 18px;
}

.logs{
    text-align: center;
    margin-top: 20px;
    color: gray;
    font-size: 28rpx;
}