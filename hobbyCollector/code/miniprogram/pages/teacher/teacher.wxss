.banner {
    text-align: center;
    background-image: -webkit-linear-gradient(left, #ea8610, #e57305);
    background-image: linear-gradient(left, #ea8610, #e57305);
    padding: 20px 0 40px;
}
.banner .img {
    display: inline-block;
    width: 100px;
    height: 100px;
    border-radius: 100px;
    border: 2px solid #fff;
    background-color: #f5eee9;
}
.banner .title {
    font-size: 18px;
    color: #fff;
    margin: 10px 0;
}
.banner .desc{
    color:#e3e3e3;
    font-size: 14px;
}
.banner .star {
    color: #ffd54c;
    font-size: 20px;
}
.li {
    padding: 20px 10px;
    border-bottom: 1px solid #d4d4d4;
}
.row{
    display: block;
    overflow: hidden;
}
.word {
    color: #333;
    font-size: 18px;
    margin-top: 10px;
}
.customer {
    float: left;
    color: #9b9b9b;
}
.list .star {
    float: right;
    color: #ffb84d;
}

.footer{
    position: fixed;
    z-index: 1000;
    height: 50px;
    line-height: 50px;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    border-top: 1px solid #e3e3e3;
}
.footer .comment{
    float:left;
    width: 49%;
    text-align: center;
}
.footer .order{
    float:right;
    width: 50%;
    text-align: center;
    background:#ffb84d;
    color: white;
}